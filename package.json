{
  "name": "rescript-stdlib-cli",
  "version": "0.3.2",
  "description": "The CLI to enforce usage of a vendored standard library in ReScript",
  "keywords": [
    "ReScript",
    "Belt",
    "Js",
    "ReScriptJs",
    "Stdlib",
    "Lint",
    "Eslint"
  ],
  "homepage": "https://github.com/DZakh/rescript-stdlib-cli#readme",
  "bugs": {
    "url": "https://github.com/DZakh/rescript-stdlib-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DZakh/rescript-stdlib-cli.git"
  },
  "license": "MIT",
  "author": "Dmitry Zakharov <dzakh.dev@gmail.com>",
  "type": "module",
  "bin": {
    "rescript-stdlib-cli": "dist/rescript-stdlib-cli.modern.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "bundle": "microbundle --entry cli.js --output dist --format modern --target node",
    "build": "npm run res:build && npm run bundle",
    "lint": "node cli.js lint",
    "res:build": "rescript build -with-deps",
    "res:dev": "rescript build -with-deps -w",
    "test": "ava"
  },
  "ava": {
    "files": [
      "__tests__/**/*_test.bs.mjs"
    ]
  },
  "dependencies": {
    "colorette": "2.0.19",
    "minimist": "1.2.7",
    "rescript": "10.1.0"
  },
  "devDependencies": {
    "@dzakh/rescript-ava": "2.1.0",
    "ava": "5.1.0",
    "microbundle": "0.15.1",
    "rescript-nodejs": "14.3.1",
    "rescript-struct": "3.0.0",
    "stdlib": "file:stdlib"
  }
}
