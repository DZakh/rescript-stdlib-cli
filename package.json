{
  "name": "rescript-stdlib-lint",
  "version": "0.4.0",
  "description": "The CLI to enforce usage of a vendored standard library in ReScript",
  "keywords": [
    "ReScript",
    "Belt",
    "Js",
    "ReScriptJs",
    "Stdlib",
    "Lint",
    "Eslint"
  ],
  "homepage": "https://github.com/DZakh/rescript-stdlib-lint#readme",
  "bugs": {
    "url": "https://github.com/DZakh/rescript-stdlib-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DZakh/rescript-stdlib-lint.git"
  },
  "license": "MIT",
  "author": "Dmitry Zakharov <dzakh.dev@gmail.com>",
  "type": "module",
  "bin": {
    "rescript-stdlib-lint": "dist/rescript-stdlib-lint.modern.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "npm run res:build && npm run bundle",
    "bundle": "microbundle --entry cli.mjs --output dist --format modern --target node",
    "coverage": "c8 --reporter=lcov npm test",
    "lint": "npm run lint:rescript-format && npm run lint:stdlib",
    "lint:rescript-format": "rescript format -check",
    "lint:stdlib": "node cli.mjs lint",
    "res:build": "rescript build -with-deps",
    "res:dev": "rescript build -with-deps -w",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "files": [
      "src/**/*_test.bs.mjs"
    ]
  },
  "dependencies": {
    "colorette": "^2.0.19",
    "minimist": "^1.2.7",
    "rescript": "^10.1.0"
  },
  "devDependencies": {
    "@dzakh/rescript-ava": "2.1.0",
    "ava": "5.1.0",
    "c8": "7.12.0",
    "execa": "6.1.0",
    "microbundle": "0.15.1",
    "rescript-nodejs": "14.3.1",
    "rescript-struct": "3.0.0",
    "stdlib": "file:stdlib"
  }
}
